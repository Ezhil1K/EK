{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["data/content.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/article/particle-counter",
      "dest": "/templates/article_particle_counter.html"
    },
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ]
}
