{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "tailwind.config.js",
      "use": "@vercel/node",
      "config": {
        "outputDirectory": "static",
        "buildCommand": "npx tailwindcss -i ./static/input.css -o ./static/output.css"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
