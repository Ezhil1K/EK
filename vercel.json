{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "templates/**",  <-- **FIXED: Includes ALL files in the templates directory**
          "images/**",     <-- **RECOMMENDED: Include all images/assets**
          "requirements.txt" <-- **RECOMMENDED: Include dependencies file**
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/article/particle-counter",
      "dest": "app.py"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
