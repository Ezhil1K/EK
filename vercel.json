{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "templates/**"
          "images/**",     
          "requirements.txt" 
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/article/particle-counter",
      "dest": "app.py"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
